// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Media {
  id           String      @id @default(cuid())
  title        String
  description  String?
  src          String
  type         String      @default("photo") // "photo" or "video"
  category     String?
  likes        Int         @default(0)
  shares       Int         @default(0)
  views        Int         @default(0)
  isFavorite   Boolean     @default(false)
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  collectionId String?
  collection   Collection? @relation(fields: [collectionId], references: [id])
}

model Collection {
  id          String   @id @default(cuid())
  name        String
  description String?
  coverImage  String?
  media       Media[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Category {
  id    String  @id @default(cuid())
  name  String  @unique
  slug  String  @unique
  icon  String?
  color String?
}
